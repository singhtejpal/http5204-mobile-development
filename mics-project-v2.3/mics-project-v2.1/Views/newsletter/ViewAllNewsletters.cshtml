@model IEnumerable<mics_project_v2._1.Models.tbl_newsletter>

@{
    ViewBag.Title = "ViewAllNewsletters";
}

<h2>All Newsletters</h2>

<div class="container">
    <div class="row">

        <div class="col-sm-8">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.heading)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.image)
                    </th>
                      

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.heading, "ViewOneNewsletter", new { id = item.Id })
                            @* @Html.DisplayFor(modelItem => item.title)*@
                        </td>
                        <td>
                            @Html.Raw(item.content)
                            @*@Html.DisplayFor(modelItem => item.content)*@
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.image)*@
                            <img src="~/images/@Html.DisplayFor(modelItem=>item.image)" style="width:150px; height:100px; border:10px solid #eee; " alt="image" />
                        </td>
                    </tr>
                }
            </table>
        </div>

        <div class="col-sm-1"></div>
    </div>
</div>












