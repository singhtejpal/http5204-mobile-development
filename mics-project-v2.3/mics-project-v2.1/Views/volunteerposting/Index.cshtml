@model IEnumerable<mics_project_v2._1.Models.tbl_volunteer_posting>

@{
    ViewBag.Title = "Index";
}

<h2>List of all Volunteer Posting</h2>

<p>
    @Html.ActionLink("Create New Volunteer Post", "Create")
</p>
<table class="table">
    <tr>
        <th>    
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.date_created)*@
            @Html.DisplayName("Today Date")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.tbl_admin.first_name)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.Raw(item.content)
            @*@Html.DisplayFor(modelItem => item.content)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_created)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.tbl_admin.first_name)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
